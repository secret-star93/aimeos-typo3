{
	"name": "aimeos/aimeos-typo3",
	"description": "Aimeos TYPO3 extension for web shops, portals and market places",
	"homepage": "http://www.aimeos.org",
	"license": "LGPL-3.0",
	"keywords": ["e-commerce", "shop", "portal", "market place"],
	"support": {
		"source": "https://github.com/aimeos/aimeos-typo3",
		"issues": "https://github.com/aimeos/aimeos-typo3/issues",
		"forum": "http://help.aimeos.org",
		"wiki": "http://docs.aimeos.org"
	},
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/aimeos/arcavias-core"
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"php": ">=5.3.2",
		"arcavias/arcavias-core": "dev-master",
		"aimeos/ai-zend2-i18n": "dev-master",
		"aimeos/ai-typo3": "dev-master"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "1.*",
		"phpunit/phpunit": "3.7.*",
		"phing/phing": "2.4.*"
	},
	"config": {
		"vendor-dir": "Resources/Libraries"
	},
	"extra": {
		"installer-paths": {
			"Resources/Extensions/{$name}/": ["type:aimeos-extension"]
		}
	},
	"scripts": {
		"post-install-cmd": [
			"cp -r Resources/Libraries/arcavias/arcavias-core/client/html/themes/* Resources/Public/Themes/"
		],
		"post-update-cmd": [
			"cp -r Resources/Libraries/arcavias/arcavias-core/client/html/themes/* Resources/Public/Themes/"
		]
	}
}
